@model Finate.Web.Models.AuthModels.AuthViewModels.ResetPasswordConfirmViewModel

@{
    ViewBag.Title = "Reset Password Confirm";
    Layout = "_Layout";
}

<section class="account-login-area">
      <div class="container">
        <div class="row justify-content-center">
          <div class="col-md-8 col-lg-7 col-xl-6">
            <div class="login-register-form-wrap">
              <div class="login-register-form">
                <div class="form-title">
                  <h4 class="title">Confirm Password Reset</h4>
                </div>
                <form asp-controller="Auth" asp-action="ResetPasswordConfirm" method="post">
                  <input type="hidden" asp-for="ReturnUrl"/>
                  <div class="row">
                    <div class="col-12">
                      <div class="form-group">
                        <input class="form-control" type="text" asp-for="UserResetPasswordToken" placeholder="Confirmation code">
                      </div>
                    </div>
                    <div class="col-12">
                      <div class="form-group">
                        <button type="submit" class="btn-theme">Confirm Password Reset</button>
                      </div>
                    </div>
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>